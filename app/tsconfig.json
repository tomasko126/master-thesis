{
  // https://v3.nuxtjs.org/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "include": ["**/*.ts", "**/*.vue", "**/*.d.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["DOM", "ES2022"],
    "module": "ES2022",
    "target": "ES2022",
    "types": ["node"],
    "esModuleInterop": true,
    "strict": true,
    "noImplicitThis": true,
  },
}
